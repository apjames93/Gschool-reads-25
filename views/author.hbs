<button type="button">
 <a href='/add-author'>
       add author
 </a>
 </button>
<section class="author-info">

  {{#each data}}
    <div class= 'info'>
      {{this.first_name}} {{this.last_name}}
    <div class="author-img">
          <img class="book-img" src="{{this.portrait}}" alt="author img"/>
    </div>
    <div>
      <button type="button">
      <a href='/{{this.id}}/author-info'>
        More Info
      </a>
      </button>
    </div>
  </div>
  {{/each}}
</section>
