<button class= "btn btn-primary col-xs-12"type="button">
 <a href='/add-author'>
       add author
 </a>
 </button>
<div class=" container-fluid author-info">
<div class="row">
  {{#each data}}
    <div class= 'col-md-4 col-xs-12'>
      <div class="info">
      <h4>{{this.first_name}} {{this.last_name}}</h4>
      <div class="author-img">
            <img class="author-img" src="{{this.portrait}}" alt="author img"/>
      </div>
      <div>
      <a href='/{{this.id}}/author-info'>
        <button class="col-xs-12 btn btn-primary"type="button">
          More Info
        </button>
      </a>
      </div>
      </div>
  </div>
  {{/each}}
</div>
</div>
